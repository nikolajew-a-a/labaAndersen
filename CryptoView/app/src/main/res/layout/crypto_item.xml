<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/favorite_crypto"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_weight="1"
        app:srcCompat="@drawable/btn_star_big_off" />

        <TextView
            android:id="@+id/number"
            android:layout_width="@dimen/column_number_width"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="@dimen/column_name_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/name"
                android:layout_width="@dimen/name_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/symbol"
                android:layout_width="@dimen/symbol_width"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="@dimen/column_price_width"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/delta_24h"
            android:layout_width="@dimen/column_delta_24h_width"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/delta_7d"
            android:layout_width="@dimen/column_delta_7d_width"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/market_cap"
            android:layout_width="@dimen/column_market_cap_width"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>